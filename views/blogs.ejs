            <form action="/delete" method="DELETE">
                <button>Delete</button>
            </form>
        </ol>
    <% } else { %>
        <h2>Please Enter the title, and the blog.</h2>
    <% } %>


    <footer>
        <nav>
            <a href="/">Home</a>
            <a href="/blogs">Blogs</a>
        </nav>
    </footer>

</body>
</html>